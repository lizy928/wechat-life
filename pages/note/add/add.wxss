input {
  border: 1px solid #ddd;
  margin: 0 20px;
  height: 40px;
  padding: 0 10px;
  position: relative;
}
 
input:after {
  content: '姓名';
  position: absolute;
  left: 0;
  top: 0;
  font-size: 14px;
  color: #aaa;
  height: 100%;
  text-indent: 5px;
  line-height: 40px;
}
 
.focus:after {
  content: '';
}